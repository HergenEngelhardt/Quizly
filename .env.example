# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Force SQLite for local development (recommended for beginners)
FORCE_SQLITE=true

# Database (PostgreSQL for Docker/Production - commented out for local dev)
# DATABASE_URL=postgres://quizly_user:quizly_password@db:5432/quizly
# DB_HOST=db
# DB_PORT=5432

# Docker PostgreSQL Settings (only needed for Docker)
POSTGRES_DB=quizly
POSTGRES_USER=quizly_user
